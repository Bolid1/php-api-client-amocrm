{
  "name": "bolid1/php-api-client-amocrm",
  "description": "Client for amoCRM API",
  "homepage": "https://github.com/Bolid1/php-api-client-amocrm",
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Valery Vargin",
      "email": "VDVUGaD@gmail.com"
    }
  ],
  "scripts": {
    "code-style-check": "phpcs --standard=./standard.xml",
    "code-style-fix": "phpcbf --standard=./standard.xml",
    "test": "phpunit --configuration phpunit.xml"
  },
  "require": {
    "php": ">=5.6.25",
    "guzzlehttp/guzzle": "6.3.0"
  },
  "require-dev": {
    "php": ">=7.0.0",
    "phpunit/phpunit": "6.2.2",
    "satooshi/php-coveralls": "dev-master",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "amoCRM\\": "lib/amoCRM/",
      "HTTP\\": "lib/HTTP/"
    }
  }
}
